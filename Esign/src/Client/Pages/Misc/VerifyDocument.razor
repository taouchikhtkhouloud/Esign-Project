@page "/Validation_document/{valeurCode}"
@attribute [AllowAnonymous]
@using Esign.Application.Features.DocumentTypes.Queries.GetFolder;
<style>
    .container1 {
        display:flex;
        padding-top: 25%;
        width:700px;
        align-items:flex-start;
        flex-direction:column;
    }

    .titre {
      
        padding-top: 50px;
        padding-bottom: 30px;
    }
</style>

<MudLayout T="GetAllDocumentOrFolderResponse" Class=""  Width="100%">
    <MudPaper Elevation="25"  Width="100%" Style="padding:10px;">
        
        <MudText Color="Color.Primary" Typo="Typo.h5">check the signed document</MudText>
            <MudText Typo="Typo.h6">Date of signature : @document.DateSignature.ToString("dd/MM/yyyy")</MudText>
            <MudText Typo="Typo.h6">Signed by : @document.NomSignateur @document.PrenomSignateur</MudText>
      
    </MudPaper>
    <br />
    <div class="d-flex flex-grow-1 gap-1 w-100">
        @if (document.CodeSignature == valeurCode)
        {

            <div  style="width:100%;height:700px;">

                <iframe src="@document.FileUrlsSigne" title="Document" />
            </div>
        }
        else
        {
    <MudText Typo="Typo.h4">document does not exist</MudText>
        }
    </div>
</MudLayout>
